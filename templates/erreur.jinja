{% extends "base.jinja" %}

{% block title %} - Erreur {{ code }}{% endblock %}

{% block content %}
<div class="d-flex justify-content-center align-items-center" style="min-height: 70vh;">
    <div class="text-center p-4 rounded" style="background-color: #f8f4e6;">
        <h1 class="display-4 text-danger mb-3">Erreur {{ code }}</h1>
        <p class="lead mb-3">{{ message }}</p>
        <a href="{{ url_for('home') }}" class="btn btn-primary">
            Retour à l’accueil
        </a>
    </div>
</div>
{% endblock %}