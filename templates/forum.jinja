{% extends 'base.jinja' %}

{% block content %}
<div class="forum-container">
    
    <div class="forum-header">
        <div class="forum-title">
            <h1>Forum {{ nom_jeu }}</h1>
            <p class="forum-subtitle">Niveau : {{ nom_niveau }}</p>
        </div>
         <a href="{{ url_for('forum.nouvelle_discussion') }}" class="btn btn-primary btn-large">
                    <span class="icon">+</span> Cr√©er une discussion
                </a>
    </div>

    <div class="forum-filters">
        <form method="GET" action="{{ url_for('forum.index') }}" class="search-bar">
            <input type="text" name="search" placeholder="Rechercher un sujet..." 
                   class="search-input" id="search-input" 
                   value="{{ search_query if search_query else '' }}">
            <input type="hidden" name="filter" value="{{ category_filter if category_filter else 'all' }}">
            <button type="submit" class="btn-search">üîç</button>
        </form>
        
        <div class="filter-buttons"> 
            <a href="{{ url_for('forum.index', filter='all', search=search_query if search_query else '') }}" 
               class="filter-btn {% if not category_filter or category_filter == 'all' %}active{% endif %}">
                Tous
            </a>
            <a href="{{ url_for('forum.index', filter='question', search=search_query if search_query else '') }}" 
               class="filter-btn {% if category_filter == 'question' %}active{% endif %}">
                Questions
            </a>
            <a href="{{ url_for('forum.index', filter='discussion', search=search_query if search_query else '') }}" 
               class="filter-btn {% if category_filter == 'discussion' %}active{% endif %}">
                Discussions
            </a>
            <a href="{{ url_for('forum.index', filter='guide', search=search_query if search_query else '') }}" 
               class="filter-btn {% if category_filter == 'guide' %}active{% endif %}">
                Guides
            </a>
        </div>
    </div>

    <div class="topics-list">
        {% if discussions %}
            {% for discussion in discussions %}
            <a href="{{ url_for('forum.voir_discussion', discussion_id=discussion.id) }}" class="topic-card-link">
                <div class="topic-card {% if discussion.epingle %}pinned{% endif %}" data-category="{{ discussion.categorie }}">
                    {% if discussion.epingle %}
                    <div class="topic-pin">üìå</div>
                    {% endif %}
                    
                    <div class="topic-avatar">
                        <div class="avatar-placeholder">{{ discussion.auteur[0]|upper }}</div>
                    </div>
                    
                    <div class="topic-content">
                        <h3 class="topic-title">{{ discussion.titre }}</h3>
                        <div class="topic-meta">
                            <span class="topic-author">{{ discussion.auteur }}</span>
                            <span class="topic-date">{{ discussion.date_creation.strftime('%d/%m/%Y √† %H:%M') if discussion.date_creation else 'Date inconnue' }}</span>
                            <span class="topic-category category-{{ discussion.categorie }}">
                                {{ discussion.categorie|capitalize }}
                            </span>
                        </div>
                        <p class="topic-preview">{{ discussion.contenu[:150] }}{% if discussion.contenu|length > 150 %}...{% endif %}</p>
                    </div>
                    
                    <div class="topic-stats">
                        <div class="stat">
                            <span class="stat-number">{{ discussion.vues }}</span>
                            <span class="stat-label">üëÅÔ∏è</span>
                        </div>
                        <div class="stat">
                            <span class="stat-number">{{ discussion.nombre_messages if discussion.nombre_messages else 0 }}</span>
                            <span class="stat-label">üí¨</span>
                        </div>
                    </div>
                </div>
            </a>
            {% endfor %}
        {% else %}
            <div class="no-discussions">
                <div class="empty-icon">
                    {% if search_query or (category_filter and category_filter != 'all') %}
                        üîç
                    {% else %}
                        üí¨
                    {% endif %}
                </div>
                <h2>
                    {% if search_query or (category_filter and category_filter != 'all') %}
                        Aucun r√©sultat trouv√©
                    {% else %}
                        Aucune discussion pour le moment
                    {% endif %}
                </h2>
                <p>
                    {% if search_query or (category_filter and category_filter != 'all') %}
                        Essayez avec d'autres mots-cl√©s ou filtres
                        <br>
                        <a href="{{ url_for('forum.index') }}" class="btn btn-secondary" style="margin-top: 15px;">R√©initialiser les filtres</a>
                    {% else %}
                        Soyez le premier √† lancer une discussion dans cette cat√©gorie !
                    {% endif %}
                </p>
            </div>
        {% endif %}
    </div>

    {% if discussions %}
    <div class="pagination">
        <button class="page-btn" disabled>‚Üê Pr√©c√©dent</button>
        <button class="page-btn active">1</button>
        <button class="page-btn" disabled>Suivant ‚Üí</button>
    </div>
    {% endif %}
</div>

{% endblock %}