{% extends 'base.jinja' %}

{% block content %}
<div class="coachs-container">
    
    <div class="coachs-header">
        <h1>Nos Coachs Disponibles</h1>
        <p class="subtitle">Trouvez le coach parfait pour amÃ©liorer votre niveau de jeu</p>
    </div>

    
    {% if coachs %}
    <div class="coachs-grid">
        {% for coach in coachs %}
        <div class="coach-card">
            <div class="coach-image">
                {% if coach.image %}
                <img src="{{ url_for('static', filename=coach.image) }}" alt="{{ coach.user_name }}">
                {% else %}
                <div class="coach-avatar-placeholder">{{ coach.user_name[0]|upper }}</div>
                {% endif %}
            </div>
            
            <div class="coach-info">
                <h3 class="coach-name">{{ coach.user_name }}</h3>
                
                <div class="coach-description">
                    {% if coach.description %}
                    {{ coach.description }}
                    {% else %}
                    <em>Aucune description disponible</em>
                    {% endif %}
                </div>
                
                <div class="coach-contact">
                    <span class="coach-email">{{ coach.courriel }}</span>
                </div>
            </div>
            
            <div class="coach-actions">
                {% if session.get('user_id') %}
                    {% if session['user_id'] != coach.id %}
                        <a href="{{ url_for('message.conversation', autre_id=coach.id) }}" 
                           class="btn btn-primary">
                            Contacter
                        </a>
                    {% else %}
                        <button class="btn btn-secondary" disabled>Vous-mÃªme</button>
                    {% endif %}
                {% else %}
                    <a href="{{ url_for('compte.connexion') }}" class="btn btn-warning">
                        Se connecter pour contacter
                    </a>
                {% endif %}
            </div>
        </div>
        {% endfor %}
    </div>
    {% else %}
    <div class="no-coachs">
        <div class="empty-icon">ðŸ‘¤</div>
        <h2>Aucun coach disponible</h2>
        <p>Il n'y a pas encore de coachs enregistrÃ©s sur la plateforme.</p>
    </div>
    {% endif %}
</div>
{% endblock %}