{% extends "base.jinja" %}

{% block title %}Vos Conversations{% endblock %}

{% block content %}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Vos Conversations</h2>
        
        <div class="dropdown">
            <button class="btn btn-outline-success dropdown-toggle" 
                    type="button" 
                    id="dropdownAdmin" 
                    data-bs-toggle="dropdown" 
                    aria-expanded="false">
                <i class="bi bi-headset"></i> Contacter un admin
            </button>
            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownAdmin">
                {% if admins and admins|length > 0 %}
                    {% for admin in admins %}
                        <li>
                            <a class="dropdown-item d-flex align-items-center" 
                               href="{{ url_for('message.conversation', autre_id=admin.id) }}">
                                {% if admin.image %}
                                    <img src="{{ url_for('static', filename=admin.image) }}" 
                                         class="rounded-circle me-2" width="30" height="30" 
                                         alt="{{ admin.user_name }}">
                                {% else %}
                                    <img src="{{ url_for('static', filename='img/profiles/default.webp') }}" 
                                         class="rounded-circle me-2" width="30" height="30" 
                                         alt="Default">
                                {% endif %}
                                <span>{{ admin.user_name }}{% if admin.id == session.user_id %} (moi){% endif %}</span>
                            </a>
                        </li>
                    {% endfor %}
                {% else %}
                    <li><span class="dropdown-item text-muted">Aucun administrateur disponible</span></li>
                {% endif %}
            </ul>
        </div>
    </div>

    {% if conversations %}
        <ul class="list-group">
            {% for conv in conversations %}
                <li class="list-group-item d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center">
                        {% if conv.image %}
                            <img src="{{ url_for('static', filename=conv.image) }}"
                            alt="Photo de profil" class="rounded-circle me-3" width="40" height="40">
                        {% else %}
                            <img src="{{ url_for('static', filename='img/profiles/default.webp') }}"
                            alt="Profil par défaut" class="rounded-circle me-3" width="40" height="40">
                        {% endif %}
                        <div>
                            <strong>
                                {% if conv.est_supprime %}
                                    Compte supprimé
                                {% else %}
                                    {{ conv.user_name }}
                                {% endif %}
                            </strong><br>
                            <small>
                                {% if conv.est_supprime %}
                                    <i>Message supprimé</i>
                                {% else %}
                                    {{ conv.dernier_message or "Aucun message" }}
                                {% endif %}
                            </small>
                        </div>
                    </div>
                    <a href="{{ url_for('message.conversation', autre_id=conv.id) }}" class="btn btn-primary btn-sm">Ouvrir</a>
                </li>
            {% endfor %}
        </ul>
    {% else %}
        <p>Aucune conversation trouvée.</p>
    {% endif %}
</div>
{% endblock %}