{% extends "base.jinja" %}

{% block title %} - Demande à {{ coach.user_name }}{% endblock %}

{% block content %}
<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-sm-12 col-md-8 col-lg-6">
            <h2 class="text-center mb-4">Envoyer une demande d'aide à {{ coach.user_name }}</h2>

            <form method="POST" class="p-4 border rounded bg-light">
                <div class="form-group mb-3">
                    <label class="objectif-titre" for="objectif">Objectif</label>
                    <input type="text" class="form-control" id="objectif" name="objectif"
                           placeholder="Ex: Améliorer stratégie..." required>
                </div>

                <div class="form-group mb-4">
                    <label class="message-titre" for="message">Message</label>
                    <textarea class="form-control" id="message" name="message" rows="5"
                              placeholder="Écrivez votre message..." required></textarea>
                </div>

                <button type="submit" class="btn btn-primary w-100">Envoyer la demande</button>
            </form>
        </div>
    </div>
</div>
{% endblock %}