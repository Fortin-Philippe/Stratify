{% extends 'base.jinja' %}

{% block content %}
<div class="forum-container">
    <form method="POST" class="discussion-form" novalidate>
        <div style="color:palegreen ;" class="form-info">
            <p>Publié par : <strong>{{ session.get('user_name') }}</strong></p>
        </div>

        <div class="form-group">
            <label for="categorie" style="color:palegreen ;">Catégorie *</label>
            <select id="categorie" name="categorie" style="color:palegreen ;"required>
                <option value="discussion">Discussion</option>
                <option value="question">Question</option>
                <option value="guide">Guide</option>
            </select>
        </div>

        <div class="form-group">
            <label for="titre"style="color:palegreen ;">Titre de la discussion *</label>
            <input style="color:palegreen ;"type="text" id="titre" name="titre" required maxlength="200" 
                   placeholder="Ex: Comment améliorer mon CS ?">
        </div>

        <div class="form-group">
            <label for="contenu"style="color:palegreen ;">Contenu *</label>
            <textarea style="color:palegreen ;"id="contenu" name="contenu" required rows="10" 
                      placeholder="Décrivez votre question ou sujet en détail..."></textarea>
        </div>

        <div class="form-actions">
            <a href="{{ url_for('forum.index') }}" class="btn btn-secondary">Annuler</a>
            <button type="submit" class="btn btn-primary">Publier la discussion</button>
        </div>
    </form>
</div>
{% endblock %}