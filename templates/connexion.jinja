{% extends "base.jinja" %}

{% block title %} - Connexion{% endblock %}

{% block content %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="container mx-auto mt-5 p-4 rounded"
     style="max-width: 600px; background-color:beige">
            <h2>Connexion</h2>
            <form method="post" action="{{ url_for('compte.connexion') }}" novalidate id="formConnexion">
                <div class="mb-3">
                    <label for="courriel" class="form-label">Courriel*</label>
                    <input type="email" class="form-control" id="courriel" name="courriel" required>
                    {% if erreurs.courriel %}
                    <div class="text-danger">{{ erreurs.courriel }}</div>
                    {% endif %}
                </div>

                <div class="mb-3">
                    <label for="mdp" class="form-label">Mot de passe*</label>
                    <input type="password" class="form-control" id="mdp" name="mdp" required>
                </div>
                {% if erreurs.connexion %}
                <div class="text-danger">{{ erreurs.connexion }}</div>
                {% endif %}
                <div class="d-grid">
                    <button type="submit" class="btn btn-primary">Se connecter</button>
                </div>
            </form>

            <div class="card-footer text-center">
                Pas encore inscrit ? <a href="{{ url_for('compte.form_utilisateur') }}">Créer un compte</a>
            </div>

        </div>
    </div>
</div>
{% endblock %}

{% block scripts %}
<script>
console.log('Script de connexion chargé');

document.addEventListener('DOMContentLoaded', function() {
    console.log('DOM chargé');
    
    const form = document.getElementById('formConnexion');
    console.log('Formulaire trouvé:', form);
    
    if (!form) {
        console.error('Formulaire de connexion introuvable');
        return;
    }

    form.addEventListener('submit', function(e) {
        console.log('Formulaire soumis');
        e.preventDefault();

        const btn = form.querySelector('button[type="submit"]');
        
        if (btn.disabled) {
            console.log('Bouton déjà désactivé');
            return;
        }

        document.querySelectorAll('.text-danger').forEach(el => el.remove());

        btn.disabled = true;
        btn.textContent = 'Connexion...';

        const xhr = new XMLHttpRequest();
        xhr.open('POST', form.action, true);
        xhr.setRequestHeader('X-Requested-With', 'XMLHttpRequest');

        xhr.onload = function() {
            console.log('Status:', xhr.status);
            console.log('Response:', xhr.responseText);
            
            let data;

            try {
                data = JSON.parse(xhr.responseText);
                console.log('Data:', data);
            } catch (e) {
                console.error("Erreur JSON:", e);
                
                const eDiv = document.createElement('div');
                eDiv.className = 'text-danger';
                eDiv.textContent = 'Erreur serveur';
                form.insertBefore(eDiv, form.querySelector('.d-grid'));
                
                btn.disabled = false;
                btn.textContent = 'Se connecter';
                return;
            }

            if (xhr.status === 200 && data.success) {
                console.log('Succès! Redirection vers:', data.redirect);
                
                
                window.location.href = data.redirect;
                return;
            }

            console.log('Erreurs:', data.erreurs);
            if (data.erreurs) {
                if (data.erreurs.connexion) {
                    const eDiv = document.createElement('div');
                    eDiv.className = 'text-danger';
                    eDiv.textContent = data.erreurs.connexion;
                    form.insertBefore(eDiv, form.querySelector('.d-grid'));
                }

                if (data.erreurs.courriel) {
                    const input = document.getElementById('courriel');
                    const eDiv = document.createElement('div');
                    eDiv.className = 'text-danger';
                    eDiv.textContent = data.erreurs.courriel;
                    input.parentNode.appendChild(eDiv);
                }
            }

            btn.disabled = false;
            btn.textContent = 'Se connecter';
        };

        xhr.onerror = function() {
            console.error('Erreur réseau');
            
            const eDiv = document.createElement('div');
            eDiv.className = 'text-danger';
            eDiv.textContent = 'Erreur de connexion';
            form.insertBefore(eDiv, form.querySelector('.d-grid'));
            
            btn.disabled = false;
            btn.textContent = 'Se connecter';
        };

        console.log('Envoi...');
        xhr.send(new FormData(form));
    });
});
</script>
{% endblock %}