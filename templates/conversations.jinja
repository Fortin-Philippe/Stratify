{% extends "base.jinja" %}
{% block title %}Conversations{% endblock %}

{% block content %}
<div class="container mt-4">
    <h1>Vos conversations</h1>

    {% if conversations %}
        <ul class="list-group mt-3">
            {% for c in conversations %}
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <div class="d-flex align-items-center">
                        {% if c.image %}
                            <img src="{{ url_for('static', filename=c.image) }}" 
                                 alt="avatar" width="40" height="40" class="rounded-circle me-2">
                        {% endif %}
                        <div>
                            <strong>{{ c.user_name }}</strong><br>
                            <small>{{ c.dernier_message|truncate(50) }}</small>
                        </div>
                    </div>
                    <div>
                        {% if c.non_lus > 0 %}
                            <span class="badge bg-danger">{{ c.non_lus }}</span>
                        {% endif %}
                        <a href="{{ url_for('messagerie.conversation', autre_id=c.id) }}" class="btn btn-sm btn-outline-primary ms-2">
                            Ouvrir
                        </a>
                    </div>
                </li>
            {% endfor %}
        </ul>
    {% else %}
        <p>Aucune conversation pour le moment.</p>
    {% endif %}
</div>
{% endblock %}
