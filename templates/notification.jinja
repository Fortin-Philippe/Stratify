{% extends "base.jinja" %}
{% block title %} - Notifications{% endblock %}

{% block content %}
<div class="container mt-4">
    <h2 class="mb-4">Vos notifications</h2>

    {% if notifications %}
    <div class="list-group shadow-sm">
        {% for notif in notifications %}
        <div class="list-group-item list-group-item-action d-flex justify-content-between align-items-center ">
            <div>
                <strong>{{ notif.titre if notif.titre else "Notification" }}</strong><br>
                <small class="text-muted">{{ notif.message if notif.message else notif }}</small>
            </div>
            <div class="mt-3 mt-md-0 text-md-end">
                {% if notif.demande_id %}
                <a href="{{ url_for('notification.accepter_demande', demande_id=notif.demande_id) }}"
                    class="btn btn-sm btn-success me-1">Accepter</a>
                <a href="{{ url_for('notification.refuser_demande', demande_id=notif.demande_id) }}"
                    class="btn btn-sm btn-danger">Refuser</a>
                {% elif notif.autre_id %}
                    <a href="{{ url_for('message.conversation', autre_id=notif.autre_id) }}"
                    class="btn btn-sm btn-primary me-1">Voir le message</a>
                {% endif %}
                <span class="badge bg-secondary">{{ notif.date_envoi if notif.date_envoi else "Aujourd'hui" }}</span>
            </div>
        </div>
        {% endfor %}
    </div>
    {% else %}
    <div class="alert alert-info text-center">
        Aucune notification pour le moment.
    </div>
    {% endif %}
</div>
{% endblock %}